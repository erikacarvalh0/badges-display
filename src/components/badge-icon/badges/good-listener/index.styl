.badge__icon-container:hover .gl
	.person
		&.front
			opacity 0
			animation fadeIn .7s .3s ease both
		
		&.back
			transform-origin 67.5% 32.3%
			animation expandMini .5s .1s ease-in both

	.button
		transform-origin center
	
		&.left
			animation expandBoxOpacity .3s .3s linear both

		&.center
			animation expandBoxOpacity .4s .3s linear both

		&.right
			animation expandBoxOpacity .5s .3s linear both

@keyframes expandMini
	from
		opacity 0
		transform scale(2.8)
	to
		opacity 1
		transform scale(1)
			
@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1