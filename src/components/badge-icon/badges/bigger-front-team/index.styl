.badge__icon-container:hover
  .bft
    .title
      fill #58C9D4
      transition fill .1s ease
    
    .button
      animation scrollbar 1s .1s linear infinite alternate

    .person
      &.left
        .head
          transform-origin 32.5% 40.5%
          animation nodHead .6s .1s linear infinite alternate
      &.center
        .head
          transform-origin 32.5% 40.5%
          animation moveHeadSide .9s .3s linear infinite alternate
      &.right
        .head
          transform-origin 32.5% 40.5%
          animation randomShake .9s .3s linear infinite alternate
    
@keyframes scrollbar
  0%
    transform translateX(-5%)
  100%
    transform translateX(5%)
    
@keyframes randomShake
  0%
    transform rotateX(-20deg)
  10%
    transform rotateX(0deg)
  70%
    transform rotateX(10deg) rotateY(2deg)

  100%
    transform rotateX(0)
    
@keyframes moveHeadSide
  0%
    transform rotateY(-10deg)
  20%
    transform rotateY(3deg)
  60%
    transform rotateY(-10deg)
  100%
    transform rotateY(0)

@keyframes nodHead
  0%
    transform rotate(-7deg)
  50%
    transform rotate(3deg)
  100%
    transform rotate(0)