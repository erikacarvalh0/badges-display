.badge
	&__icon-container
		transform rotateY(0)
		transition transform .6s ease, opacity .65s ease-out

	&__icon-label
		margin 0
		line-height .9em
		color white
		text-transform uppercase
		text-align center

		&-container
			position absolute
			bottom 0
			left 50%
			display flex
			align-items center
			justify-content center
			width 130px
			height 40px
			transform translateX(-50%)

	&__checkbox
		&:checked
			& + .badge__label
				.badge__icon-container
					transform rotateY(-180deg)