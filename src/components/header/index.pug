include ../icon/index.pug

mixin header()

	header(class="header")
		a(href="https://erikacarvalho.dev")
			img(class="header__image" src="images/icons/logo.svg")
		
		nav(class="header__nav")
			div(class="header__nav-icon")
				img(data-js="menubtn" class="header__image" src="images/icons/menu.svg")
				div(class="header__hamburguer")
			
			ul(data-js="menu" class="header__menu")
				button(data-js="closeMenu" class="header__menu-button")
					+icon('menu')
				li(class="header__menu-item")
					a(class="header__menu-link" href="https://erikacarvalho.dev") Home
				li(class="header__menu-item")
					a(class="header__menu-link" href="https://erikacarvalho.dev/about") Sobre
				li(class="header__menu-item")
					a(class="header__menu-link" href="https://erikacarvalh0.github.io/badges-display/") Painel de Conquistas
				li(class="header__menu-item")
					a(class="header__menu-link" href="https://github.com/erikacarvalh0/cv-generator-cli") CV Generator CLI

				button(class="header__info" data-js="showInfo") 
					span i
					| About this project 

			dialog(data-js="infoModal" class="modal__info")
				button( class="modal__close" data-js="hideInfo") X
				header(class="modal__header")
					h2(class="modal__title") About this project

				section(class="modal__body")
					p(class="modal__text")
						strong Objetivo técnico:
						| Treinar manipulação de SVG com animações CSS.
					
					p(class="modal__text")
						strong Stack utilizada:
						| Pug/Jade, Stylus, JS vanilla
					
					p(class="modal__text")
						strong Tempo para desenvolvimento v1:
						| Aproximadamente 18h
					
					p(class="modal__text")
						strong Repositório:
						a(href="https://github.com/erikacarvalh0/badges-display" target="_blank") Github

	script(type="text/javascript")
		include ./index.js
