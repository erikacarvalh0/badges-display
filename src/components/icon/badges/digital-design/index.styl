.badge__icon-container
	.design
		.palette
			transition all .3s ease

			&__grey
				transition all .3s ease
	&:hover
		.design
			.content
				&__bar
					animation moveUp .3s ease-in-out both
				&__box
					transform-origin center
					animation expandBoxOpacity .6s ease-in-out both
				&__color-column
					path
						for i in (1...4)
							&:nth-child({i})
								$duration = .1s * i
								animation moveUp $duration .3s ease-in-out both, changeFill $duration 1.4s ease-in both

			.palette
				animation movePalette .3s .6s ease-in both

				&__grey
					transform-origin 24% 67%
					transform rotate(-36deg)
					animation rotateGrey .3s .9s ease-in both

					&-color-1
						transform-origin 28% 57%
						animation bounceExpansion .5s 1.1s ease-in-out forwards

@keyframes changeFill
	0%
		fill #58C9D4

	100%
		fill #828282

@keyframes bounceExpansion
	0%
		transform scale(0.8)
	50%
		transform scale(1.2)

	100%
		transform scale(1)

@keyframes expandBoxOpacity
	0%
		opacity 0
		transform scale(0.9)

	100%
		opacity 1
		transform scale(1)

@keyframes moveUp
	0%
		opacity 0
		transform translateY(5px)

	100%
		opacity 1
		transform translateY(0)

@keyframes movePalette
	0%
		opacity 0
		transform translateY(20px)

	100%
		opacity 1
		transform translateY(0)

@keyframes rotateGrey
	0%
		opacity 0
	5%
		opacity 1
		transform-origin 24% 67%
		transform rotate(-36deg)

	100%
		transform-origin 24% 67%
		transform rotate(0)